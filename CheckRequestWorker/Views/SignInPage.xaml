<Page x:Class="CheckRequestWorker.Views.SignInPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CheckRequestWorker.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="SignInPage">

    <Grid>
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
        <Label Content="Вход" HorizontalAlignment="Center" FontSize="25"/>
            <Label Content="Код работника" HorizontalAlignment="Center"/>
        <TextBox HorizontalAlignment="Left" TextWrapping="Wrap" VerticalAlignment="Top" MinWidth="150" MinHeight="35" FontSize="25" Text="{Binding Code}"/>
            <Button Content="Войти" Command="{Binding SignIn}"/>
        </StackPanel>
    </Grid>
</Page>
